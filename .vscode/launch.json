{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "RUN(Benchmark)",
			"args": [
				"${file}",
			],
			"console": "integratedTerminal",
		}
		,
		{
			"type": "node",
			"request": "launch",
			"name": "DEBUG(TS)",
			"args": [
				"${file}",
			],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"env": {
				"DEBUG": "jsonx",
				"TS_NODE_PROJECT": "tsconfig.json"
			},
			"console": "integratedTerminal",
			"protocol": "inspector",
		},
		{
			"type": "node",
			"request": "launch",
			"name": "DEBUG(MOCHA)",
			"program": "${workspaceFolder}/node_modules/.bin/mocha",
			"args": [
				"${file}",
				"--no-timeouts"
			],
			"runtimeArgs": [
				"-r",
				"ts-node/register",
				"-r",
				"tsconfig-paths/register"
			],
			"env": {
				"DEBUG": "jsonx",
				"TS_NODE_PROJECT": "${workspaceFolder}/test/tsconfig.json",
			},
			"console": "integratedTerminal",
			"protocol": "inspector",
		},
		{
			"type": "node",
			"request": "attach",
			"name": "DEBUG(attach)",
			"protocol": "inspector",
			"port": 9229
		}
	]
}